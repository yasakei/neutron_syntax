{
  "name": "neutron",
  "displayName": "Neutron",
  "description": "Neutron is a lightweight, object-oriented toy programming language designed for learning and experimentation. This VS Code extension provides full syntax highlighting and type checking, including keywords, variables, constants, strings, numbers, function definitions and calls, object method calls, and `use` imports.",
  "version": "0.0.9",
  "publisher": "moadabdou",
  "icon": "icon.png",
  "repository": {
    "url": "git+https://github.com/moadabdou/neutron_syntax.git"
  },
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onLanguage:neutron"
  ],
  "contributes": {
    "configuration": {
      "title": "Neutron",
      "properties": {
        "neutron.runtimePath": {
          "type": "string",
          "default": "neutron",
          "markdownDescription": "Path to the Neutron runtime executable. Example: C:/tools/neutron.exe or neutron if in PATH."
        },
        "neutron.importPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Additional directories to search for .nt files used by completion suggestions for 'using'."
        },
        "neutron.enableTypeChecking": {
          "type": "boolean",
          "default": true,
          "description": "Enable type checking for Neutron files"
        }
      }
    },
    "commands": [
      {
        "command": "neutron.reloadCompletions",
        "title": "Neutron: Reload Completions"
      },
      {
        "command": "neutron.runCurrentFile",
        "title": "Run Current File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "neutron.runCurrentFile",
          "when": "resourceLangId == neutron",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "neutron.runCurrentFile",
        "key": "ctrl+alt+r",
        "when": "editorLangId == neutron && editorTextFocus"
      },
      {
        "command": "neutron.runCurrentFile",
        "key": "cmd+alt+r",
        "when": "editorLangId == neutron && editorTextFocus",
        "mac": "cmd+alt+r"
      }
    ],
    "categories": [
      "Programming Languages"
    ],
    "iconThemes": [
      {
        "id": "neutron-icons",
        "label": "Neutron File Icons",
        "path": "./icons/neutron-icon-theme.json"
      }
    ],
    "languages": [
      {
        "id": "neutron",
        "aliases": [
          "neutron",
          "neutron"
        ],
        "extensions": [
          ".nt",
          ".quark"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "neutron",
        "scopeName": "source.neutron",
        "path": "./syntaxes/neutron.tmLanguage.json"
      }
    ]
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/moadabdou/neutron_syntax/issues"
  },
  "homepage": "https://github.com/moadabdou/neutron_syntax#readme",
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "vscode": "^1.1.37"
  }
}
