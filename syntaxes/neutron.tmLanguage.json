{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "neutron",
    "scopeName": "source.neutron",
    "patterns": [
        { "include": "#comments" },
        { "include": "#imports" },
        { "include": "#file-imports" },
        { "include": "#typed-variables" },
        { "include": "#keywords" },
        { "include": "#match-statements" },
        { "include": "#exception-handling" },
        { "include": "#retry-statement" },
        { "include": "#operators" },
        { "include": "#constants" },
        { "include": "#types" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#lambdas" },
        { "include": "#functions" },
        { "include": "#variables" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.neutron",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.neutron",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },

        "keywords": {
            "patterns": [
                {
                    "name": "storage.type.var.neutron",
                    "match": "\\b(var)\\b"
                },
                {
                    "name": "keyword.control.neutron",
                    "match": "\\b(if|elif|else|while|do|for|return|break|continue|class|fun|this|and|or|not|in|new|match|case|default|retry|try|catch|finally|throw)\\b"
                }
            ]
        },
        "match-statements": {
            "patterns": [
                {
                    "name": "meta.match.statement.neutron",
                    "begin": "\\b(match)\\b",
                    "beginCaptures": {
                        "1": { "name": "keyword.control.neutron" }
                    },
                    "end": "\\}",
                    "patterns": [
                        {
                            "begin": "\\(",
                            "end": "\\)",
                            "name": "meta.match.condition.neutron",
                            "patterns": [
                                {
                                    "include": "#expression"
                                }
                            ]
                        },
                        {
                            "begin": "\\{",
                            "end": "(?=\\})",
                            "name": "meta.match.body.neutron",
                            "patterns": [
                                {
                                    "name": "meta.case.statement.neutron",
                                    "match": "\\b(case)\\s+([^=]+)(=>)",
                                    "captures": {
                                        "1": { "name": "keyword.control.neutron" },
                                        "2": { "name": "meta.match.pattern.neutron" },
                                        "3": { "name": "keyword.operator.arrow.neutron" }
                                    }
                                },
                                {
                                    "name": "meta.case.default.neutron",
                                    "match": "\\b(default)\\s*(=>)",
                                    "captures": {
                                        "1": { "name": "keyword.control.neutron" },
                                        "2": { "name": "keyword.operator.arrow.neutron" }
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        },

        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.neutron",
                    "match": "=>"
                },
                {
                    "name": "keyword.operator.ternary.neutron",
                    "match": "\\?|:"
                }
            ]
        },

        "constants": {
            "patterns": [
                {
                    "name": "constant.language.neutron",
                    "match": "\\b(true|false|nil)\\b"
                },
                {
                    "name": "constant.other.neutron",
                    "match": "\\b[A-Z_][A-Z0-9_]*\\b"
                }
            ]
        },

        "types": {
            "patterns": [
                {
                    "name": "support.class.neutron",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },

        "typed-variables": {
            "patterns": [
                {
                    "comment": "Optional type annotations after var: var int x = 1;",
                    "begin": "\\b(var)\\s+(?:(int|float|string|bool|array|object|any))\\b",
                    "beginCaptures": {
                        "1": { "name": "storage.type.var.neutron" },
                        "2": { "name": "storage.type.primitive.neutron" }
                    },
                    "end": "(?=\\s*[=;\\)])",
                    "name": "meta.variable.typed-declaration.neutron",
                    "patterns": [
                        {
                            "name": "variable.other.neutron",
                            "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
                        }
                    ]
                }
            ]
        },

        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.neutron",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.neutron",
                            "match": "\\\\."
                        },
                        {
                            "name": "meta.string.interpolation.neutron",
                            "begin": "\\$\\{",
                            "beginCaptures": {
                                "0": { "name": "punctuation.definition.template-expression.begin.neutron" }
                            },
                            "end": "\\}",
                            "endCaptures": {
                                "0": { "name": "punctuation.definition.template-expression.end.neutron" }
                            },
                            "patterns": [
                                {
                                    "include": "#expression"
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.neutron",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.neutron",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },

        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.neutron",
                    "match": "\\b(?:\\d+\\.\\d*|\\.\\d+|\\d+)(?:[eE][+-]?\\d+)?\\b"
                }
            ]
        },

        "functions": {
            "patterns": [
                {
                    "comment": "Function definitions after 'fun'",
                    "begin": "\\bfun\\s+",
                    "beginCaptures": {
                        "0": { "name": "keyword.other.function.neutron" }
                    },
                    "end": "(?=\\()",
                    "name": "meta.function.definition.neutron",
                    "patterns": [
                        {
                            "name": "entity.name.function.definition.neutron",
                            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                        }
                    ]
                },
                {
                    "comment": "Standalone function calls like say()",
                    "name": "entity.name.function.call.neutron",
                    "match": "(?<!\\bfun\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
                },
                {
                    "comment": "Method calls like object.method() â€” only color method name",
                    "name": "entity.name.function.call.method.neutron",
                    "match": "(?<=\\.)[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
                }
            ]
        },

        "variables": {
            "patterns": [
                {
                    "name": "variable.other.neutron",
                    "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "imports": {
            "patterns": [
                {
                    "begin": "\\b(use)\\b\\s+(?:\\(.*?\\)\\s+)?=\\s+from\\s+",
                    "beginCaptures": {
                        "0": { "name": "keyword.control.import.selective" }
                    },
                    "end": "(;)",
                    "endCaptures": {
                        "1": { "name": "punctuation.terminator" }
                    },
                    "patterns": [
                        {
                            "name": "support.type.module.builtin.neutron",
                            "match": "\\b(sys|json|math|convert|time|http|fmt|arrays|async)\\b"
                        },
                        {
                            "name": "support.type.module",
                            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                        }
                    ]
                },
                {
                    "begin": "\\b(use)\\b\\s+",
                    "beginCaptures": {
                        "1": { "name": "keyword.control.import" }
                    },
                    "end": "(;)",
                    "endCaptures": {
                        "1": { "name": "punctuation.terminator" }
                    },
                    "patterns": [
                        {
                            "name": "support.type.module.builtin.neutron",
                            "match": "\\b(sys|json|math|convert|time|http|fmt|arrays|async)\\b"
                        },
                        {
                            "name": "support.type.module",
                            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*\\b"
                        }
                    ]
                }
            ]
        },
        "expression": {
            "patterns": [
                {
                    "include": "#strings"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#keywords"
                },
                {
                    "include": "#constants"
                },
                {
                    "include": "#functions"
                },
                {
                    "include": "#variables"
                }
            ]
        },
        "file-imports": {
            "patterns": [
                {
                    "begin": "\\b(using)\\b\\s+(?:\\(.*?\\)\\s+)?=\\s+from\\s+",
                    "beginCaptures": {
                        "0": { "name": "keyword.control.import.selective" }
                    },
                    "end": "(;)",
                    "endCaptures": {
                        "1": { "name": "punctuation.terminator" }
                    },
                    "patterns": [
                        {
                            "name": "string.quoted.single.path.neutron",
                            "match": "'(?:\\\\'|[^'])*'"
                        }
                    ]
                },
                {
                    "begin": "\\b(using)\\b\\s*",
                    "beginCaptures": {
                        "1": { "name": "keyword.control.import" }
                    },
                    "end": "(;)",
                    "endCaptures": {
                        "1": { "name": "punctuation.terminator" }
                    },
                    "patterns": [
                        {
                            "name": "string.quoted.single.path.neutron",
                            "match": "'(?:\\\\'|[^'])*'"
                        }
                    ]
                }
            ]
        }
        ,
        "lambdas": {
            "patterns": [
                {
                    "comment": "Anonymous function (lambda) parameters",
                    "begin": "\\bfun\\s*\\(",
                    "beginCaptures": {
                        "0": { "name": "keyword.other.function.neutron" }
                    },
                    "end": "\\)",
                    "name": "meta.function.lambda.neutron",
                    "patterns": [
                        {
                            "name": "variable.parameter.neutron",
                            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                        },
                        {
                            "name": "punctuation.separator.parameter.neutron",
                            "match": ","
                        }
                    ]
                }
            ]
        },
        "exception-handling": {
            "patterns": [
                {
                    "name": "meta.exception.try.neutron",
                    "begin": "\\b(try)\\b",
                    "beginCaptures": {
                        "1": { "name": "keyword.control.exception.neutron" }
                    },
                    "end": "(?<=\\})",
                    "patterns": [
                        {
                            "include": "#block"
                        },
                        {
                            "begin": "\\b(catch)\\b\\s*\\(",
                            "beginCaptures": {
                                "1": { "name": "keyword.control.exception.neutron" }
                            },
                            "end": "\\)",
                            "name": "meta.exception.catch.parameters.neutron",
                            "patterns": [
                                {
                                    "include": "#variables"
                                }
                            ]
                        },
                        {
                            "include": "#block"
                        },
                        {
                            "match": "\\b(finally)\\b",
                            "name": "keyword.control.exception.neutron"
                        },
                        {
                            "begin": "\\b(throw)\\b",
                            "beginCaptures": {
                                "1": { "name": "keyword.control.exception.neutron" }
                            },
                            "end": "(?=;|\\)|\\}|\\n)",
                            "name": "meta.exception.throw.neutron",
                            "patterns": [
                                {
                                    "include": "#expression"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "retry-statement": {
            "patterns": [
                {
                    "name": "meta.retry.statement.neutron",
                    "begin": "\\b(retry)\\b\\s*\\(",
                    "beginCaptures": {
                        "1": { "name": "keyword.control.neutron" }
                    },
                    "end": "\\)",
                    "patterns": [
                        {
                            "include": "#expression"
                        }
                    ]
                }
            ]
        },
        "block": {
            "patterns": [
                {
                    "begin": "\\{",
                    "end": "\\}",
                    "name": "meta.block.neutron",
                    "patterns": [
                        {
                            "include": "#all-content"
                        }
                    ]
                }
            ]
        },
        "all-content": {
            "patterns": [
                { "include": "#comments" },
                { "include": "#imports" },
                { "include": "#file-imports" },
                { "include": "#typed-variables" },
                { "include": "#keywords" },
                { "include": "#match-statements" },
                { "include": "#exception-handling" },
                { "include": "#retry-statement" },
                { "include": "#operators" },
                { "include": "#constants" },
                { "include": "#types" },
                { "include": "#strings" },
                { "include": "#numbers" },
                { "include": "#lambdas" },
                { "include": "#functions" },
                { "include": "#variables" }
            ]
        }
    }
}
